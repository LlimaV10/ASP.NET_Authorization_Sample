@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="main_nav">
        <a asp-action="Index" asp-controller="Home">Home</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Profile" asp-controller="Account">@User.Identity.Name</a>
            <a method="post" asp-controller="Account" asp-action="Logout">Logout</a>
            if (User.IsInRole("admin"))
            {
                <a asp-controller="Account" asp-action="EditUsers">Edit Users</a>
            }
            if (User.IsInRole("SuperAdmin"))
            {
                <a asp-controller="Roles" asp-action="Index">Edit Roles</a>
            }
        }
        else
        {
            <a asp-action="Login" asp-controller="Account">Login</a>
            <span>/</span>
            <a asp-action="Register" asp-controller="Account">Register</a>
        }
    </nav>
    <div class="main_block">
        @RenderBody()
    </div>
</body>
</html>

