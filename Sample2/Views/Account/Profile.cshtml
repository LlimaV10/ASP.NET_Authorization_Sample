@model Sample2.Models.ProfileEditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}


<h1>Profile</h1>
<div>
    <form method="post" asp-controller="Account" asp-action="Profile">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="UserName"></label><br />
            <input asp-for="UserName" value="@Model.UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" value="@Model.Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <input type="submit" value="Сохранить изменения" />
        </div>
    </form>
    <a asp-controller="Account" asp-action="EditPassword">Изменить Пароль</a>
</div>
