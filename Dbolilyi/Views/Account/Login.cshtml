@model Dbolilyi.Models.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/css/style.css" rel="stylesheet" />

<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account" class="but">Регистрация</a>
<a asp-action="Index" asp-controller="Home" class="but">Home</a>
<br /><br />
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login">Введите Login</label>
            <input type="text" asp-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
        </div>
        @Html.ValidationSummary()
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>